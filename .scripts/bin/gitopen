#!/usr/bin/python3
#
# Opens the current git repository in your browser, if you're in one

import subprocess
import webbrowser

from giturlparse import parse


def detch_open_webbrowser(url):
    """
    If no browser is open, and webbrowser.open is called,
    the python process itself is what launches the browser.
    `gitopen` stays running till the browser dies.

    use xdg-open instead, as that detaches the process
    """
    subprocess.run(["xdg-open", url], check=True)


result = subprocess.run(
    ["git", "config", "--get", "remote.origin.url"], stdout=subprocess.PIPE
)
git_url = result.stdout.decode("utf-8").strip()

if not git_url:
    print("Not currently in a git repository.")
else:
    try:
        # try to use giturlparse
        https_url = parse(git_url).urls["https"]
        detch_open_webbrowser(https_url)
    except:
        # try to directly open url
        try:
            detach_open_webbrowser(git_url)
        except:
            print("Error parsing {}, make sure its formatted properly.".format(git_url))
