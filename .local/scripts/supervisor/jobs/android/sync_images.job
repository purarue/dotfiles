#!/usr/bin/env bash

STORAGE="${HOME}/storage/"

IMAGE_DIRS=(
	"${STORAGE}/dcim/Camera/"
	"${STORAGE}/pictures/Screenshots/"
)

evry 1 day -backup_images && {
	BACKUP_TO="$(python3 -m my.utils.backup_to phone_pictures)"
	for idir in "${IMAGE_DIRS[@]}"; do
		[[ -d "${idir}" ]] || continue
		rsync -Pavh "${idir}" "${BACKUP_TO}/$(basename "${idir}")"
	done
}
