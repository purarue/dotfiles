#!/bin/sh
# copy from STDIN
# on X, puts text on both clipboards
# on mac, uses pbcopy (cmd+c/v clipboard)

STDIN="$(cat)"

[ -z "${STDIN}" ] && exit

if [ -n "$ONLINUX" ]; then
	printf "%s" "${STDIN}" | xclip -in
	printf "%s" "${STDIN}" | xclip -in -selection clipboard
else
	printf "%s" "${STDIN}" | pbcopy
fi
