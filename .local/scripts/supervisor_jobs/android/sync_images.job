#!/usr/bin/env bash

STORAGE="${HOME}/storage/"

IMAGE_DIRS=(
	"${STORAGE}/dcim/Camera/"
	"${STORAGE}/pictures/Screenshots/"
)

evry 1 hour -backup_images && {
	BACKUP_TO="$(backup_to phone_pictures)"
	for idir in "${IMAGE_DIRS[@]}"; do
		[[ -d "${idir}" ]] || continue
		rsync -Pavh --exclude=".*" "${idir}" "${BACKUP_TO}/$(basename "${idir}")"
	done
}
