#!/bin/bash
# sync photos from my data directory to my XDG_PICTURES_DIR
# on my phone, this is synced from the underlying dcim/Camera folder:
# https://sean.fish/d/sync_images.job?dark

set -u

evry 5 minutes -copy_images && {
	rsync -Pavh "${HPIDATA}/phone_pictures" "${XDG_PICTURES_DIR}" &&
		find "${HPIDATA}/phone_pictures" -type f -mtime +7 -print -delete
}
