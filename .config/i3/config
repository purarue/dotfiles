# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Source Code Pro 12

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
#exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
#exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock-fancy --greyscale --pixelate -t "" --nofork
# keybind lock (does not automatically lock on lid close)
bindsym $mod+Escape exec --no-startup-id ~/.scripts/lock-screen

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# use picom for display compositing
exec --no-startup-id picom -b

# Use feh to choose a random picture from the ~/Pictures/wallpapers
# directory to use as a wallpaper
exec --no-startup-id feh --randomize --bg-fill "${HOME}"/Pictures/wallpapers/*

# Disable touchpad 
exec --no-startup-id ~/.scripts/touchpad disable

# dunst, for Notifications
exec --no-startup-id dunst

# start discord, minimized
exec --no-startup-id "discord --start-minimized"

# Bind brightness keys
# This required fiddling with the /sys/class/backlight/amdgpu_b10 file permissions
# and giving myself the 'video' group
set $brightness_step 2 # rate at which to increase/decrease brightness
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.scripts/brightness up $brightness_step
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.scripts/brightness down $brightness_step

# Bind $mod+Brightness keys to transparency toggle
# Uses picom-trans to set the transparency to 100/85% (same as active/inactive)
# This "breaks" inactive transparency for that tile, but that can be fixed by reloading i3 ($mod+Shift+R)
# Doesn't typically affect use case as transparency for an unfocused firefox/mpv is set permanently

# Highligted Window
bindsym $mod+XF86MonBrightnessUp exec --no-startup-id ~/.scripts/transparent enable
bindsym $mod+XF86MonBrightnessDown exec --no-startup-id ~/.scripts/transparent disable

# Change mouse to target
bindsym $mod+Shift+XF86MonBrightnessUp exec --no-startup-id ~/.scripts/transparent enable target
bindsym $mod+Shift+XF86MonBrightnessDown exec --no-startup-id ~/.scripts/transparent disable target

# Use pactl to adjust volume in PulseAudio.
set $volume_step 5
# 1 in -RTMIN+1 matches signal in ~/.config/i3blocks/config in the volume module
set $refresh_block_volume pkill -RTMIN+1 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +$volume_step% && $refresh_block_volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -$volume_step% && $refresh_block_volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_block_volume
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_block_volume

# Refresh todo icon when todo file changes
exec --no-startup-id echo "${HOME}/.todo/todo.txt" | entr pkill -RTMIN+2 i3blocks

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id termite

# kill focused window
bindsym $mod+q kill

# rofi run menu
bindsym $mod+r exec --no-startup-id rofi -show run

# rofi switch window menu
bindsym $mod+d exec --no-startup-id rofi -show window

# take a screenshot
bindsym --release Print exec --no-startup-id "maim -s | tee ~/Desktop/Screenshots/$(date '+%d-%m-%Y--%R:%S').png | xclip -t image/png -selection clipboard"

# gaps config
for_window [class=".*"] border pixel 0
smart_borders on
smart_borders no_gaps
gaps inner 10
gaps outer 10

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# resize windows - keys above "vim arrow" keys
bindsym $mod+Shift+y exec --no-startup-id ~/.scripts/i3resize left
bindsym $mod+Shift+u exec --no-startup-id ~/.scripts/i3resize down
bindsym $mod+Shift+i exec --no-startup-id ~/.scripts/i3resize up
bindsym $mod+Shift+o exec --no-startup-id ~/.scripts/i3resize right

# split in horizontal orientation
bindsym $mod+Shift+z split h
# split in vertical orientation
bindsym $mod+Shift+v split v

# prefer toggle over explicit switching - switch split default orientation
bindsym $mod+t split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

bindsym $mod+Tab mode "launcher"

mode "launcher" {
    bindsym f exec firefox-developer-edition
    bindsym t exec thunderbird
    bindsym d exec discord
    bindsym s exec slack
    bindsym k exec keepassxc
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    status_command i3blocks
}
