# https://github.com/purarue/ttally
TTALLY_ALIASES="${HOME}/.cache/ttally_aliases"
if [[ ! -e "${TTALLY_ALIASES}" ]]; then
	if hash ttally; then
		python3 -m ttally generate >"${TTALLY_ALIASES}"
	fi
fi
[[ -e "${TTALLY_ALIASES}" ]] && source "${TTALLY_ALIASES}"
sn() {
	self-now && {
		if [[ -n "$TTALLY_FILTERS" ]]; then
			self-recent 1 | grep -qiE "$TTALLY_FILTERS" && vps_sync_ttally || true
		else
			vps_sync_ttally || true
		fi
	}
}
se() {
	local tf
	if [[ -z "$TTALLY_FILTERS" ]] || grep -q '|' <<<"$TTALLY_FILTERS"; then
		echo 'TTALLY_FILTERS is not set or has multiple filters, skipping sync' >&2
		return 1
	fi
	tf="$(mktemp)" || return $?
	jq --null-input --arg TIMESTAMP "$(epoch)" --arg FILTER "$(upper <<<"$TTALLY_FILTERS")" '[{"when": $TIMESTAMP, "what": $FILTER}]' | tee "$tf" | jq '.[] | .what' -r | surround "'" | prefix 'added ' && \
		python3 -m ttally from-json self --file "${tf}" && \
		vps_sync_ttally
	command rm -f "$tf"
}
abbrev-alias es=se

rs() {
	reminder-sink-silence && {
		tail -n1 "$(reminder-sink silence file)" | grep -qiE "$TTALLY_FILTERS" && vps_sync_ttally || true
	}
}
