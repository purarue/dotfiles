budget-summary() {
	if [[ -z "$1" ]]; then
		budget summary | glow -
	else
		budget summary "$@"
	fi
}

# https://github.com/seanbreckenridge/ttally
TTALLY_ALIASES="${HOME}/.cache/ttally_aliases"
