# https://github.com/seanbreckenridge/evry
# reset a job (remove the tag file) for an evry job
job-reset() {
	local data_dir tags
	data_dir="$(evry location - 2>/dev/null)"
	cd "${data_dir}" || return $?
	tags="$(fzf -q "$*" -m)" || {
		cd -
		return 1
	}
	while read -r tag; do
		rm -v "${tag}"
	done <<<"$tags"
	cd -
}
describe-evry-json() {
	jq -r '.[] | select((.type == "tag_name") or .type == "till_next_pretty") | .body' | paste -d " " - - | sed -e 's/ / - /'
}
# https://github.com/seanbreckenridge/bgproc
alias rj='bgproc_on_machine -pn'
# reset a job with job-reset, then run all jobs
run-job() {
	job-reset "$@" || return $?
	bgproc_on_machine -on
	havecmd housekeeping && housekeeping
}

# search for cubing competitions near me
# https://sean.fish/d/wca-comps?dark
wca-local() {
	local state
	# use my IP address to fetch what state/region I'm currently in
	# https://sean.fish/d/ipinfo?dark
	state="$(ipinfo | grep 'region' | cut -d":" -f2- | chomp | lower)"
	wca-comps | jq -r '.[] | "\(.date) - \(.name) - \(.location)"' | grep -i "${state}"
}
# https://github.com/seanbreckenridge/scramble-history
_cube-stats-f() {
	scramble_history merge -g event_description -a stats "$@"
}
cube-stats() {
	_cube-stats-f -q 'event_description?=["3x3 CFOP", "3x3 CFOP OH", "2x2", "4x4"]' "$@"
}
alias cube-stats-graphs='cube-stats -G --graph-opt kitty-print'
alias cube-stats-all=_cube-stats-f
alias cube-stats-all-graphs='cube-stats-all -G --graph-opt kitty-print'


# random
