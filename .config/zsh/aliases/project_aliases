# https://github.com/purarue/frinkconv
conv() {
	local args=()
	for arg in "$@"; do
		# replace '--' or with '->'. its annoying to type
		# '->' in the shell (since you need to add quotes)
		if [[ arg == "--" ]]; then
			args+=("->")
		else
			args+=("$arg")
		fi
	done
	frinkconv "${args[*]}"
}

