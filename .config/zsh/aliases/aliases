#!/usr/bin/env zsh

# save ls so it can be used elsewhere if I want
alias l="$(command -v ls) --color=auto"
# alias ls to exa
alias ls='exa --icons'
alias ll='ls -hl'
alias la='ll -a'
alias sl='ls | rev'

# yadm
alias yds="yadm diff --staged"
alias yst="yadm status"
alias yd="yadm diff"
alias ysu="yadm status -u"
alias ya="yadm add"
alias yc="yadm commit"
alias yp="yadm push"
alias yl="yadm pull --recurse-submodules"

# editor aliases
alias en='e -n'   # editor with nvim
alias ecl='e -cb' # editor with client in background

# Standard
alias reboot="sudo systemctl reboot"
alias poweroff="sudo systemctl poweroff"
alias halt="sudo systemctl halt"
alias shutdown="poweroff"
alias du="dust"
alias df="df -h"
alias history='history 0'
alias todo='todo.sh'
alias twitchlive-table='twitchlive --output-format="table"'
alias preview='serve .'

# Non-standard

# open screenshots folder
alias screens='sxiv -t ~/Desktop/Screenshots/*.png'
# remove packages that arent being used for anything
alias remove_orphans='sudo pacman -Rns $(pacman -Qtdq)'
# clear yay tar.gz cache
alias yay_clear_cache='yay -Syu && yay -Sc'
# create a notes file in the current directory
alias create_notes='touch $(date +"%y_%m_%d").md'
# print a readable $PATH
alias echopath='echo $PATH | tr ":" "\n"'
# sxiv full screen image, fit full width
alias sxfull="sxiv -s f -f"
# open all the firefox addons in the browser
alias firefox_addons='openurls < ~/.local/share/firefox_addons.txt'
# run python with the math module imported to use as my calculator
alias calc='python3 -i ~/.config/pythonrc -c "from math import *"'
# pipe some command into stripcolors, removes any ANSI color codes
alias stripcolors="sed 's/\x1B\[[0-9;]\+[A-Za-z]//g'"
# alias ? to duck, searches duckduckgo in lynx
alias "?=duck"
