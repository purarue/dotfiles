#!/bin/sh
# https://github.com/LukeSmithxyz/voidrice/blob/archi3/.local/bin/statusbar/volume

[ $(pamixer --get-mute) = "true" ] && printf "ðŸ”‡\\n" && exit

vol=$(pamixer --get-volume | tr -d "\n")

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"
