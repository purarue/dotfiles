#!/usr/bin/env bash

items="$(reminder-sink run)"
if [[ -z "$items" ]]; then
	count=0
else
	count="$(awk 'NF > 0 { count++ } END { print count }' <<<"$items")"
fi
text="$(colorize_number "$count")"
exec jq --null-input --compact-output --raw-output --monochrome-output --arg text "ï€® $text" --arg items "$items" '{"text": $text, "tooltip": $items}'
