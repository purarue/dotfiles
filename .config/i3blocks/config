seperator_block_width=15
markup=pango

# entr in ~/.config/i3/config refreshes this when the file changes
[todo]
command=sed '/^\s*#/d;/^\s*$/d' "${HOME}/.config/todo/todo.txt" | wc -l
interval=once
label=üìù
signal=2

[battery]
command="${HOME}/.config/i3blocks/blocks/battery" BAT0
interval=10

[clock]
command="${HOME}/.config/i3blocks/blocks/date"
interval=5

[ssid]
command="${HOME}/.config/i3blocks/blocks/network"
interval=10

[help]
interval=once
