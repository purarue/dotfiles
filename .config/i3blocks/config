seperator_block_width=15
markup=pango

# [weather]
# command="${HOME}/.config/i3blocks/blocks/weather"
# interval=1800

# entr in ~/.config/i3/config refreshes this when the file changes
[todo]
command=wc -l < "${HOME}/.todo/todo.txt"
interval=once
signal=2
label=📝

[volume]
command="${HOME}/.config/i3blocks/blocks/volume"
signal=1
interval=300 # incase headphones are plugged in

[brightness]
command=echo "$(light | cut -d"." -f1)%"
interval=once
signal=10
label=🔆

[battery]
command="${HOME}/.config/i3blocks/blocks/battery" BAT0
interval=10

[clock]
command=date '+%b %d (%a) %I:%M%p'
interval=10

[ssid]
command=iwgetid -r
interval=10

[help]
interval=once
