seperator_block_width=15
markup=pango

# entr in ~/.config/i3/config refreshes this when the file changes
[todo]
command="${HOME}/.config/i3blocks/blocks/todo"
interval=once
signal=2

[volume]
command="${HOME}/.config/i3blocks/blocks/volume"
signal=1
interval=300 # incase headphones are plugged in

[brightness]
command=echo "$(light | cut -d"." -f1)%"
interval=once
signal=10
label=ðŸ”†

[battery]
command="${HOME}/.config/i3blocks/blocks/battery" BAT0
interval=10

[clock]
command="${HOME}/.config/i3blocks/blocks/date"
interval=5

[ssid]
command=iwgetid -r
interval=10

[help]
interval=once
